<h1 class="page-header animated fadeInLeft">Contact</h1>

<p class="animated fadeIn">You can contact us by completing the form below</p>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", class: "animated fadeIn", id: "contact-form", method: "post", local: true) do |form| %>
<div class="row">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
  </div>
</div>
<%= form.submit "Send", class: "form_label" %>
<% end %>
