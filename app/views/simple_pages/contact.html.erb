<h1 class="page-header animated fadeInDown">Contact</h1>

<p class="animated fadeIn">You can contact us by completing the form below</p>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= form_with(url:"/simple_pages/thank_you", class: "custom-form animated fadeIn", method: "post", local: true) do |form| %>
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1">
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control", placeholder: "*Enter Name", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.text_field :email, class: "form-control", placeholder: "*Enter Email", required: true  %>
            </div>
            <div class="form-group">
              <%= form.label :message %>
              <%= form.text_area :message, class: "form-control", placeholder: "*Enter Message", rows: 5, required: true  %>
            </div>
          </div>
        </div>
        <%= form.submit "Send", class: "form_label" %>
      <% end %>
    </div>
  </div>
</div>
