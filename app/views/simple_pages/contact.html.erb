<div class="container-fluid image-background" id="contact-1">
  <div class="image-overlay d-flex align-items-center justify-content-center">
    <h1 class="section-header exo white text-center no-margin text-capitalize">Contact Us</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <%= form_with(url:"/simple_pages/thank_you", class: "custom-form", method: "post", local: true) do |form| %>
        <div class="row">
          <div class="col-10 offset-1">
            <div class="form-group">
              <%= form.label :name, class: "kanit-3 blue" %>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <%= form.label :email, class: "kanit-3 blue"  %>
              <%= form.text_field :email, class: "form-control", required: true  %>
            </div>
            <div class="form-group">
              <%= form.label :message, class: "kanit-3 blue"  %>
              <%= form.text_area :message, class: "form-control", rows: 10, required: true, style: "resize:none"  %>
            </div>
            <div class="text-center">
              <%= form.submit "Send", class: "form_label submit kanit-3" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: 'footer' %>
