<div class="container-fluid image-background" style="background-image: url(/assets/flo-karr-145590-unsplash-fade.jpg); margin-top: 0;">
  <div class="image-overlay d-flex align-items-center justify-content-center">
    <h1 class="section-header exo white text-center no-margin text-capitalize">Sign Up</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "custom-form"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="col-10 offset-1">
            <div class="form-group">
              <%= f.label :first_name, class: "kanit-3 blue"  %><br />
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name, class: "kanit-3 blue"  %><br />
              <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :email, class: "kanit-3 blue"  %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "kanit-3 blue"  %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "kanit-3 blue"  %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="actions text-center mt2">
          <%= f.submit "Sign up", class: "form-label submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center">
  <p class="default-text kanit-3">Already signed up? Log in here:</p>
  <%= render "devise/shared/links" %>
</div>

<%= render partial: 'footer' %>
