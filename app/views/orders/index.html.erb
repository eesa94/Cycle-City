<div class="row">
  <h1 class="page-header animated fadeInDown">Your Orders</h1>
  <% @orders.each do |order| %>
    <div class="col-sm-2 col-md-4 animated fadeIn">
      <h1>
        Order # <%= order.id %>:
        <%= link_to order.product.name, order %>
      </h1>
      <p><%= order.product.description %></p>
      <strong>$ <%= order.product.price %></strong>
    </div>
  <% end %>
</div>
