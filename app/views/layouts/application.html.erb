              <% if user_signed_in? %>
                <%= link_to(destroy_user_session_path, method: :delete, class:"secondary-link white kanit-3") do %>
                  Log Out
                <% end %>
              <% else %>
                <%= link_to(new_user_session_path, class:"secondary-link white kanit-3") do %>
                  Log In
                <% end %>
              <% end %>

            </div>
          </div>
          <div class="col-md-6 d-flex flex-row justify-content-center align-items-center">
            <div class="d-flex justify-content-between">
              <a href="https://www.facebook.com" class="d-flex justify-content-center align-items-center social-icon" id="facebook">
                <i class="fab fa-facebook-f white"></i>
              </a>
              <a href="https://www.twitter.com" class="d-flex justify-content-center align-items-center social-icon" id="twitter">
                <i class="fab fa-twitter white"></i>
              </a>
                <a href="https://www.instagram.com" class="d-flex justify-content-center align-items-center social-icon" id="instagram">
                <i class="fab fa-instagram white"></i>
              </a>
                <a href="https://www.youtube.com" class="d-flex justify-content-center align-items-center social-icon" id="youtube">
                <i class="fab fa-youtube white"></i>
              </a>
            </div>
          </div>
        </div> <!-- secondary-links-row -->
      </div> <!-- secondary links container -->
    </nav>

