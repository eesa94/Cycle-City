<% if signed_in? %>
  <div class="review-form col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <h3>Add a review:</h3>
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <p>
        <%= f.text_area :body, class: "form-control" %>
      </p>

      <p>
        <div class="rating"></div>
      </p>

      <p>
        <%= f.submit "Submit" %>
      </p>
    <% end %>
  </div>
<% end %>
