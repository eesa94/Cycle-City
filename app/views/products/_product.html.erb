<% cache product do %>
  <div class="col-sm-12 col-md-4 products-individual">
    <%= link_to product do %>
      <%= image_tag(product.image_url, class: "img-responsive") %>
    <% end %>
    <%= link_to product do %>
      <h3><%= product.name %></h3>
    <% end %>
    <p>
      <%= link_to 'View More', product, class: "btn btn-primary mt2 mb1", role: "button" %>
    </p>
  </div>
<% end %>
