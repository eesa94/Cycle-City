<% cache product do %>
  <div class="col-sm-12 col-md-4 products-individual">
    <%= link_to product do %>
      <%= image_tag(product.image_url, class: "img-responsive") %>
    <% end %>
    <%= link_to product do %>
      <h3><%= product.name %></h3>
    <% end %>
    <p><%= product.colour %></p>
    <p><%= product.price/100 %></p>
  </div>
<% end %>
