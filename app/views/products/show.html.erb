<div class="container-fluid animated fadeIn">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <%= image_tag(@product.image_url, class: "img-responsive show-view-image", data_zoom_image: @product.image_url) %>
    </div>
  </div>
  <div class="row mb3" data-product-id="<%= @product.id %>">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <h2 class="sub-header product-header">
        <%= @product.name %>
        <span class="price">
          (<i class="fa fa-dollar-sign"></i><%= @product.price/100 %>)
        </span>
      </h2>

      <div class="row sub-row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
          <h3>Description</h3>
          <% cache @product do %>
            <p>
              <%= @product.description %>
            </p>

            <p>
              Colour: <%= @product.colour %>
            </p>

            <p>
              Price: <%= @product.price/100 %>
            </p>
          <% end %>

          <p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div>
          </p>

          <p>
            <%= form_with(url: '/payments/create') do |form| %>
              <%= render partial: "shared/stripe_checkout_button" %>
              <%= hidden_field_tag(:product_id, @product.id) %>
            <% end %>
          </p>
        </div>
      </div>

      <div class="row sub-row product-reviews">
        <div class="col-xs-12">
          <h3>User Feedback</h3>
          <p>
            <%= @product.highest_rating_comment %>
          </p>
          <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
          <%= render 'comments' %>
        </div>
      </div>

      <% if signed_in? %>
        <div class="row sub-row review-container">
          <%= render 'new_comment' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<% if signed_in? && current_user.admin? %>
  <%= link_to 'Edit', edit_product_path(@product) %>
<% end %>
