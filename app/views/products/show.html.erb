<p id="notice"><%= notice %></p>

<div class="container-fluid animated fadeIn">
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <%= image_tag(@product.image_url, class: "img-responsive show-view-image") %>
    </div>
  </div>
  <div class="row mb3">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <h2 class="sub-header product-header">
        <%= @product.name %>
        <span class="price">
          (<i class="fa fa-dollar-sign"></i><%= @product.price %>)
        </span>
      </h2>

      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
          <h3>Description</h3>
          <p>
            <%= @product.description %>
          </p>

          <p>
            Colour: <%= @product.colour %>
          </p>

          <p>
            Price: <%= @product.price %>
          </p>

          <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <h3>User Feedback</h3>
          <p>
            <%= @product.highest_rating_comment %>
          </p>
          <%= render 'comments' %>
        </div>
      </div>

      <div class="review-container">
        <%= render 'new_comment' %>
      </div>

    </div>
  </div>
</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
